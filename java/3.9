import java.util.Scanner;
public class xyc_1 {
    public static void main(String[] args) {
        int d[] = new int[11];
        Scanner in = new Scanner(System.in);
        int i;
        System.out.print("Enter the fist 9 digits of an ISBN as integer: ");
        String s = in.next();
        for (i = 1; i <= 9; ++i)
            d[i] = (int) s.charAt(i - 1) - '0';
        for (i = 1; i <= 9; ++i)
            d[10] += d[i] * i;
        d[10] %= 11;
        System.out.print("The ISBN-10 number is ");
        for (i = 1; i <= 9; ++i)
            System.out.print(d[i]);
        if (d[10] == 10)
            System.out.println('X');
        else
            System.out.println(d[10]);
    }
}
